<Window x:Class="Trivial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trivial"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="20"></Setter>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="10"></Setter>
            <Setter Property="Padding" Value="3"></Setter>
        </Style>
        <Style TargetType="{x:Type GroupBox}">
            <Setter Property="Margin" Value="5"></Setter>
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="añadirPreguntaEstilo" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="IsEnabled" Value="True"/>
            <Style.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding ElementName=preguntaTextBox, Path=Text}" Value=""></Condition>
                        <Condition Binding="{Binding ElementName=respuestaTextBox, Path=Text}" Value=""></Condition>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="IsEnabled" Value="False"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl>
            <TabItem Header="Jugar">
            </TabItem>
            <TabItem Header="Añadir Pregunta">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Row="0" Grid.Column="0" Header="Información">
                        <StackPanel>
                            <StackPanel Margin="10">
                                <TextBlock>Pregunta</TextBlock>
                                <TextBox x:Name="preguntaTextBox" Text="{Binding Path=NuevaPregunta.Texto, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                            </StackPanel>
                            <StackPanel Margin="10">
                                <TextBlock >Respuesta</TextBlock>
                                <TextBox x:Name="respuestaTextBox" Text="{Binding Path=NuevaPregunta.Respuesta, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                            </StackPanel>
                            <StackPanel Margin="10">
                                <TextBlock>Imagen</TextBlock>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="imagenTextBox" Grid.Row="0" Grid.Column="0" VerticalContentAlignment="Center" Text="{Binding Path=NuevaPregunta.Imagen, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    <Button x:Name="examinarButton" Grid.Row="0" Grid.Column="1" Margin="5,0,0,0" Padding="0" Click="examinarButton_Click">Examinar</Button>
                                </Grid>
                            </StackPanel>
                            <StackPanel Margin="10">
                                <TextBlock>Dificultad</TextBlock>
                                <ComboBox  ItemsSource="{Binding Path=Niveles}"></ComboBox>
                            </StackPanel>
                            <StackPanel Margin="10">
                                <TextBlock>Categoría</TextBlock>
                                <ComboBox ItemsSource="{Binding Path=Categorias}"></ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="añadirPreguntaButton" Click="añadirPreguntaButton_Click" Style="{StaticResource añadirPreguntaEstilo}">Añadir Pregunta</Button>
                                <Button x:Name="limpiarFormButton">Limpiar Formulario</Button>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Grid.Row="0" Grid.Column="1" Header="Vista previa">
                        <StackPanel>
                            <Image Source="assets/image_not_found.png"  Margin="10"></Image>
                            <TextBlock Text="{Binding ElementName=preguntaTextBox, Path=Text}" Margin="10,0,10,0"></TextBlock>
                        </StackPanel>
                    </GroupBox>
                </Grid>



            </TabItem>
            <TabItem Header="Gestionar Preguntas">

            </TabItem>
        </TabControl>
    </Grid>
</Window>
